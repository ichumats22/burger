<div class='container'>
  <div class='row'>
    <div class='col-12'>
      <h1>Burger Time!</h1>

      <img src='/assets/img/Picture1.png' class="rounded mx-auto d-block">
    </div>
  </div><!-- end of row 1 div-->

  <div class='row'>
    <div class='col-6'>
      <h2>Ready to eat!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div><!--end of row 2 col 1 div-->

    <div class='col-6'>
      <h2>Devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div><!--end of row 2 col 2 div-->
  </div><!--end of row 2 div-->

  <div class='row'>
    <div class='col-12'>
      <h2>Add a Burger</h2>
      <p>Add your favorite ingredients, then click submit!</p>
      <form class="create-form">

        <div class="form-group">
          <textarea id="burger_name" name="name" rows='3' cols='30'></textarea>
        </div>

        <button type="submit">Add Burger</button>
      </form>

    </div>
  </div><!--end of row 3 div-->
</div><!--end of container div-->




